<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Splash Screen Theme. -->
    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black_2</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/nasa_logo_launcher</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.Nasa</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black_2</item>
        <item name="android:navigationBarColor">@color/black_2</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>